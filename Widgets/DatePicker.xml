<Ui>

    <Frame name="TBDDatePickerGridviewItemTemplate" mixin="TBDDatePickerGridviewItemMixin" virtual="true">
        <Layers>
            <Layer level="HIGHLIGHT">
                <Texture atlas="Forge-ColorSwatchHighlight"/>
            </Layer>
            <Layer level="OVERLAY">
                <FontString parentKey="text" inherits="GameFontNormal">
                    <Color r="1" g="1" b="1"/>
                    <Anchors>
                        <Anchor point="CENTER" x="0" y="0"/>
                    </Anchors>
                </FontString>
            </Layer>
        </Layers>
    </Frame>

    <Frame name="TBDDatePicker" mixin="TBDDatePickerMixin" virtual="true">
        <Size x="160" y="186"/>
        <Layers>
            <Layer level="BACKGROUND">
                <Texture>
                    <Color r="0.085" g="0.09" b="0.075" a="1"/>
                    <Anchors>
                        <Anchor point="TOPLEFT" x="0" y="0"/>
                        <Anchor point="BOTTOMRIGHT" x="0" y="0"/>
                    </Anchors>
                </Texture>
            </Layer>
            <Layer level="OVERLAY">
                <FontString parentKey="text" inherits="GameFontNormal">
                    <!-- <Color r="1" g="1" b="1"/> -->
                    <Anchors>
                        <Anchor point="TOPLEFT" x="0" y="-24"/>
                        <Anchor point="TOPRIGHT" x="0" y="-24"/>
                    </Anchors>
                    <Size y="22"/>
                </FontString>
            </Layer>
        </Layers>

        <Frames>

            <Button parentKey="selector" inherits="UIPanelButtonTemplate">
                <Size x="60" y="24"/>
                <Anchors>
                    <Anchor point="TOPLEFT" x="0" y="0"/>
                </Anchors>
            </Button>

            <ScrollFrame parentKey="gridview" inherits="TBDGridviewTemplate">
                <Anchors>
                    <Anchor point="TOPLEFT" x="0" y="-46"/>
                    <Anchor point="BOTTOMRIGHT" x="0" y="0"/>
                </Anchors>
            </ScrollFrame>
            
            <Button parentKey="close" inherits="UIPanelCloseButton">
                <Anchors>
                    <Anchor point="TOPRIGHT" x="6" y="6"/>
                </Anchors>
                <Scripts>
                    <OnClick>
                        HideUIPanel(self:GetParent())
                    </OnClick>
                </Scripts>
            </Button>

            <EditBox parentKey="hourInput" inherits="InputBoxTemplate" numeric="true" autoFocus="false" enableMouse="true">
                <Size x="40" y="22"/>
                <Anchors>
                    <Anchor point="BOTTOMLEFT" x="60" y="0"/>
                </Anchors>
                <Layers>
                    <Layer level="OVERLAY">
                        <FontString inherits="GameFontNormalLarge" text=":">
                            <Color r="1" g="1" b="1"/>
                            <Anchors>
                                <Anchor point="LEFT" relativePoint="RIGHT" x="2" y=""/>
                            </Anchors>
                        </FontString>
                        <FontString inherits="GameFontNormal" text="Time">

                            <Anchors>
                                <Anchor point="RIGHT" relativePoint="LEFT" x="-10" y=""/>
                            </Anchors>
                        </FontString>
                    </Layer>
                </Layers>
            </EditBox>

            <EditBox parentKey="minuteInput" inherits="InputBoxTemplate" numeric="true" autoFocus="false" enableMouse="true">
                <Size x="40" y="22"/>
                <Anchors>
                    <Anchor point="LEFT" relativeKey="$parent.hourInput" relativePoint="RIGHT" x="16" y="0"/>
                </Anchors>
            </EditBox>

        </Frames>

        <Scripts>
            <OnLoad method="OnLoad"/>
            <OnHide method="OnHide"/>
        </Scripts>
    </Frame>
</Ui>